options {
	directory "/var/cache/bind";
	auth-nxdomain yes;
	datasize default;
	listen-on { any; };
	listen-on-v6 { any; };

	allow-recursion {
		::1/128;
		127.0.0.1/8;
		2001:67c:2d50::/48;
		fdef:ffc0:3dd7::/48;
		10.130.0.0/16;
	};

	allow-transfer { none; };
	allow-update { none; };
	version none;
	hostname none;
	server-id none;
	empty-zones-enable yes;
};
